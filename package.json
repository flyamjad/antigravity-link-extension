{
    "name": "antigravity-link-extension",
    "displayName": "Antigravity Link",
    "description": "Mobile upload and voice-to-text bridge for Antigravity",
    "icon": "icon.png",
    "version": "1.0.2",
    "license": "MIT",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "publisher": "cafetechne",
    "repository": {
        "type": "git",
        "url": "https://github.com/cafeTechne/Antigravity-Link"
    },
    "activationEvents": [
        "onStartupFinished",
        "onCommand:antigravity-link.start"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "antigravity-link.start",
                "title": "Start Server",
                "category": "Antigravity Link"
            },
            {
                "command": "antigravity-link.stop",
                "title": "Stop Server",
                "category": "Antigravity Link"
            },
            {
                "command": "antigravity-link.showQR",
                "title": "Show QR Code",
                "category": "Antigravity Link"
            }
        ],
        "configuration": {
            "title": "Antigravity Link",
            "properties": {
                "antigravityLink.port": {
                    "type": "number",
                    "default": 3000,
                    "description": "Port for the local upload server"
                },
                "antigravityLink.autoStart": {
                    "type": "boolean",
                    "default": false,
                    "description": "Start Antigravity Link automatically when VS Code launches"
                },
                "antigravityLink.useHttps": {
                    "type": "boolean",
                    "default": true,
                    "description": "Serve the mobile bridge over HTTPS with a self-signed certificate"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run typecheck && npm run bundle",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "typecheck": "tsc -p ./ --noEmit",
        "bundle": "node ./esbuild.js",
        "package": "vsce package",
        "test": "mocha -r ts-node/register src/test/injectFile.test.ts"
    },
    "devDependencies": {
        "@types/chai": "^5.2.3",
        "@types/express": "^4.17.21",
        "@types/mocha": "^10.0.10",
        "@types/node": "^20.12.7",
        "@types/qrcode": "^1.5.5",
        "@types/selfsigned": "^2.0.4",
        "@types/vscode": "^1.90.0",
        "@types/ws": "^8.5.10",
        "chai": "^6.2.2",
        "mocha": "^11.7.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "vsce": "^2.15.0",
        "esbuild": "^0.20.2"
    },
    "dependencies": {
        "@types/multer": "^1.4.11",
        "express": "^4.19.2",
        "multer": "^1.4.5-lts.1",
        "qrcode": "^1.5.3",
        "selfsigned": "^2.4.1",
        "ws": "^8.16.0"
    }
}
